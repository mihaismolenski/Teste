@{
    ViewBag.Title = "Insert Questions";
}
<script type="text/javascript" src="@Url.Content("/Scripts/jquery-1.8.2.js")"></script>
<script type="text/javascript" src="@Url.Content("/Scripts/questions.js")"></script>
<h3>Insert new question</h3>
@using (Html.BeginForm("Submit", "Insert", FormMethod.Post, null))
{
    <fieldset>
        <legend>Insert Question</legend>
        <div>
         <label for="QuestionName">Question Name:</label>
         <input type="text" name="QuestionName" value="" />
         @Html.ValidationMessage("questionname")
      </div>
      <div class="input_fields_wrap">
        <button class="add_field_button">Add More Fields</button>
        <div><input type="text" name="mytext[]"></div>
        @Html.ValidationMessage("raspuns")
      </div>
      <div>
         <label for="Argumente">Argumente raspunsuri:</label>
         <textarea name="Argumente" value="" ></textarea> 
         @Html.ValidationMessage("argumente")
      </div>
      <div>
         <label>&nbsp;</label>
         <input type="submit" value="Submit Question" />
      </div>
    </fieldset>
}